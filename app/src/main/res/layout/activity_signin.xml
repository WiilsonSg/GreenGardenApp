<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Signin">

    <Button
        android:id="@+id/button3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Button" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="679dp"
        android:layout_height="416dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/fondosingin" />

    <ImageView
        android:id="@+id/imageView9"
        android:layout_width="703dp"
        android:layout_height="577dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.169"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@drawable/bottom_white" />

    <ImageView
        android:id="@+id/imageView10"
        android:layout_width="400dp"
        android:layout_height="170dp"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/rounds" />


    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="40dp"
        android:text="           Hola! \n Bienvenido"
        android:textColor="#ffffff"
        android:textSize="30dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:orientation="vertical"
        android:paddingLeft="32dp"
        android:paddingTop="0dp"
        android:paddingRight="32dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        android:gravity="center">

        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Correo"
            android:textColor="#000000"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/email_entry"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:ems="10"
            android:paddingLeft="9dp"
            android:layout_marginTop="0dp"
            android:textColor="#5A5858"
            android:background="@drawable/edittex_background"
            android:textSize="18dp"
            android:inputType="text"
            android:hint="Ingresa tu correo" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="Contrase単a"
            android:textColor="#000000"
            android:textSize="20sp" />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="41dp">

            <EditText
                android:id="@+id/password_entry"
                android:layout_width="match_parent"
                android:layout_height="41dp"
                android:layout_marginTop="0dp"
                android:background="@drawable/edittex_background"
                android:ems="10"
                android:hint="Ingresa tu contrase単a"
                android:inputType="textPassword"
                android:paddingLeft="9dp"
                android:paddingTop="5dp"
                android:textColor="#5A5858"
                android:textSize="18dp" />

            <androidx.constraintlayout.utils.widget.ImageFilterButton
                android:id="@+id/visibilityOff"
                android:layout_width="46dp"
                android:layout_height="41dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@null"
                app:srcCompat="@drawable/visibility_off" />
        </RelativeLayout>

        <TextView
            android:id="@+id/contra1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="多No recuerdas tu contrase単a? recuperarlo"
            android:textAlignment="center"
            android:textColor="@color/Black"
            android:layout_marginTop="32dp"
            />


        <TextView
            android:id="@+id/textView8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Or Login With"
            android:textColor="@color/BlueD"
            android:textStyle="bold"
            android:textAlignment="center"
            android:layout_marginTop="32dp"/>

        <ImageView
            android:id="@+id/imageView12"
            android:layout_width="51dp"
            android:layout_height="51dp"
            android:layout_marginTop="30dp"
            app:srcCompat="@drawable/logogooglesinfondo" />

        <Button
            android:id="@+id/loginMain"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="15dp"
            android:backgroundTint="#068251"
            android:text="Login"
            android:textColor="@color/White"
            android:textSize="18dp"
            android:textStyle="bold"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="81dp"
        android:layout_marginBottom="70dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">


        <ImageView
            android:id="@+id/goBack"
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:srcCompat="@drawable/chevrons_left" />
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>