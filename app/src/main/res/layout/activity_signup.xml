<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/White"
    tools:context=".Signup">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/imageView15"
        android:layout_width="match_parent"
        android:layout_height="245dp"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:shapeAppearanceOverlay="@style/circularMain"
        app:srcCompat="@drawable/singuup" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="400dp"
        android:layout_height="170dp"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/roundssignuo" />


    <TextView
        android:id="@+id/textView4"
        android:layout_width="129dp"
        android:layout_height="125dp"
        android:layout_marginLeft="5dp"
        android:layout_marginBottom="10dp"
        android:text="Hola! \nCrea tu \ncuenta"
        android:textColor="@color/White"
        android:textSize="30dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.14"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.064" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="514dp"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingLeft="32dp"
        android:paddingTop="0dp"
        android:paddingRight="32dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.885">

        <TextView
            android:id="@+id/NameR"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nombre"
            android:textColor="#000000"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/enterYourName"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="1dp"
            android:background="@drawable/edittex_background"
            android:ems="10"
            android:hint="Escribe tu nombre"
            android:inputType="text"
            android:paddingLeft="9dp"
            android:textColor="#5A5858"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:text="Correo"
            android:textColor="#000000"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/enterYourEmail"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="1dp"
            android:background="@drawable/edittex_background"
            android:ems="10"
            android:hint="Escribe tu correo"
            android:inputType="textEmailAddress"
            android:paddingLeft="9dp"
            android:textColor="#5A5858"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:text="Contrase単a"
            android:textColor="#000000"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/enterYourPassword"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="1dp"
            android:background="@drawable/edittex_background"
            android:ems="10"
            android:hint="Escribe tu contrase単a"
            android:inputType="textPassword"
            android:paddingLeft="12dp"
            android:paddingTop="5dp"
            android:textColor="#5A5858"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/texPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:text="Repite tu contrase単a"
            android:textColor="#000000"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/enterYourRePassword"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="1dp"
            android:background="@drawable/edittex_background"
            android:ems="10"
            android:hint="Repetir contrase単a"
            android:inputType="textPassword"
            android:paddingLeft="12dp"
            android:paddingTop="5dp"
            android:textColor="#5A5858"
            android:textSize="18dp" />


        <CheckBox
            android:id="@+id/checkBoxTerm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/Black"
            android:textSize="16dp"
            android:text="@string/checkBoxGreen"/>


        <TextView
            android:id="@+id/textView8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="22dp"
            android:text="Registrarse con"
            android:textAlignment="center"
            android:textColor="@color/BlueD"
            android:textStyle="bold"
            />


        <ImageView
            android:id="@+id/imageVie"
            android:layout_width="51dp"
            android:layout_height="51dp"
            android:layout_marginTop="10dp"
            app:srcCompat="@drawable/logogooglesinfondo" />

        <Button
            android:id="@+id/singUpButton"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="3dp"
            android:backgroundTint="#068251"
            android:text="Registrarse"
            android:textColor="@color/White"
            android:textSize="18dp"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="81dp"
        android:layout_marginBottom="70dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">


        <ImageView
            android:id="@+id/goBack"
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:srcCompat="@drawable/chevrons_left" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>