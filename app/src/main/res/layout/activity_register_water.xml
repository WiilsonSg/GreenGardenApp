<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/White"
    tools:context=".categories.RegisterWater">


    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/water"
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:scaleType="centerCrop"
        app:shapeAppearanceOverlay="@style/circularMain"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout11"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/register_water" />


    <LinearLayout
        android:id="@+id/linearLayout11"
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingLeft="32dp"
        android:paddingTop="0dp"
        android:paddingRight="32dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0">

        <TextView
            android:id="@+id/userName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Registro consumo de agua"
            android:textAlignment="center"
            android:textColor="@color/Green"
            android:textSize="25dp"/>

        <TextView
            android:id="@+id/volq"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="Volumen en m"
            android:textColor="#000000"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/volumeW"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="0dp"
            android:background="@drawable/edittex_background"
            android:ems="10"
            android:hint="Ingresa el valor"
            android:inputType="text"
            android:paddingLeft="9dp"
            android:textColor="#5A5858"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/vol1"
            android:layout_marginTop="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Costo"
            android:textColor="#000000"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/costW"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="0dp"
            android:background="@drawable/edittex_background"
            android:ems="10"
            android:hint="Ingresa el costo"
            android:inputType="text"
            android:paddingLeft="9dp"
            android:textColor="#5A5858"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="Fecha"
            android:textColor="#000000"
            android:textSize="20sp" />



        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="41dp">

            <EditText
                android:id="@+id/dateW"
                android:layout_width="match_parent"
                android:layout_height="41dp"
                android:layout_marginTop="0dp"
                android:paddingStart="50dp"
                android:background="@drawable/edittex_background"
                android:ems="10"
                android:hint="Fecha"
                android:inputType="text"
                android:paddingLeft="9dp"
                android:paddingTop="5dp"
                android:textColor="#5A5858"
                android:textSize="18dp" />

            <androidx.constraintlayout.utils.widget.ImageFilterView
                android:id="@+id/calendar"
                android:layout_width="45dp"
                android:layout_height="40dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:background="@null"
                app:srcCompat="@drawable/calendar" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginTop="40dp"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/registerW"
                android:layout_width="160dp"
                android:layout_height="60dp"
                android:layout_margin="5dp"
                android:backgroundTint="#068251"
                android:text="Registrar"
                android:textColor="@color/White"
                android:textSize="18dp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/ViewButton"
                android:layout_width="160dp"
                android:layout_height="60dp"
                android:layout_margin="5dp"
                android:backgroundTint="@color/BlueD"
                android:text="Ver"
                android:textColor="@color/White"
                android:textSize="18dp"
                android:textStyle="bold" />
        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="81dp"
        android:layout_marginBottom="70dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">


        <ImageView
            android:id="@+id/goBack"
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:srcCompat="@drawable/chevrons_left" />
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>